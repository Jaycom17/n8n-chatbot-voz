<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_whatsapp_message_template_form" model="ir.ui.view">
        <field name="name">whatsapp.message.template.form</field>
        <field name="model">whatsapp.message.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="conversation_stage_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <label for="message" string="Mensaje"/>
                        <field name="message" widget="text" nolabel="1" 
                               placeholder="Ejemplo:&#10;Hola, gracias por tu interés en nuestros cursos.&#10;&#10;Tenemos las siguientes opciones:&#10;- Curso A: $100&#10;- Curso B: $200&#10;&#10;¿Cuál te interesa?"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Notas internas sobre cuándo usar este mensaje"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_whatsapp_message_template_tree" model="ir.ui.view">
        <field name="name">whatsapp.message.template.tree</field>
        <field name="model">whatsapp.message.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="conversation_stage_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_whatsapp_message_template_search" model="ir.ui.view">
        <field name="name">whatsapp.message.template.search</field>
        <field name="model">whatsapp.message.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="conversation_stage_id"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Etapa de Conversación" name="stage" context="{'group_by':'conversation_stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de menú -->
    <record id="action_whatsapp_message_template" model="ir.actions.act_window">
        <field name="name">Mensajes por Conversación</field>
        <field name="res_model">whatsapp.message.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera plantilla de mensaje
            </p>
            <p>
                Configura los mensajes que el chatbot usará en diferentes momentos de la conversación.
            </p>
        </field>
    </record>
</odoo>