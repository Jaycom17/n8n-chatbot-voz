<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_whatsapp_message_template_form" model="ir.ui.view">
        <field name="name">whatsapp.message.template.form</field>
        <field name="model">whatsapp.message.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="conversation_stage_id"/>
                            <field name="product_category_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="detected_variables" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <label for="message" string="Mensaje"/>
                        <div class="text-muted">
                            Variables disponibles: {nombre}, {email}, {telefono}, {empresa}
                        </div>
                        <field name="message" widget="text" nolabel="1" 
                               placeholder="Ejemplo:&#10;Hola {nombre}, gracias por tu interés en nuestros cursos.&#10;&#10;Tenemos las siguientes opciones:&#10;- Curso A: $100&#10;- Curso B: $200&#10;&#10;¿Cuál te interesa?"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Notas internas sobre cuándo usar este mensaje"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_whatsapp_message_template_tree" model="ir.ui.view">
        <field name="name">whatsapp.message.template.tree</field>
        <field name="model">whatsapp.message.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="conversation_stage_id"/>
                <field name="product_category_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_whatsapp_message_template_search" model="ir.ui.view">
        <field name="name">whatsapp.message.template.search</field>
        <field name="model">whatsapp.message.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="conversation_stage_id"/>
                <field name="product_category_id"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Etapa de Conversación" name="stage" context="{'group_by':'conversation_stage_id'}"/>
                    <filter string="Producto/Servicio" name="product" context="{'group_by':'product_category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de menú -->
    <record id="action_whatsapp_message_template" model="ir.actions.act_window">
        <field name="name">Mensajes por Conversación</field>
        <field name="res_model">whatsapp.message.template</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera plantilla de mensaje
            </p>
            <p>
                Configura los mensajes que el chatbot usará en diferentes momentos de la conversación.
            </p>
        </field>
    </record>
</odoo>