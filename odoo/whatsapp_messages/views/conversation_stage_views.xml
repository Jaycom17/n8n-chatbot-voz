<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_conversation_stage_form" model="ir.ui.view">
        <field name="name">conversation.stage.form</field>
        <field name="model">conversation.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="message_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Describe cu치ndo se usa esta etapa en la conversaci칩n"/>
                    </group>
                    <notebook>
                        <page string="Mensajes" name="messages">
                            <field name="message_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="product_category_id"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_conversation_stage_tree" model="ir.ui.view">
        <field name="name">conversation.stage.tree</field>
        <field name="model">conversation.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="message_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Acci칩n -->
    <record id="action_conversation_stage" model="ir.actions.act_window">
        <field name="name">Etapas de Conversaci칩n</field>
        <field name="res_model">conversation.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>